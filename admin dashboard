  <script>
    // ------------------------------
    // Theme persistence + switching
    // ------------------------------
    (function() {
      const key = 'dashboard-theme';
      const root = document.documentElement;
      const buttons = Array.from(document.querySelectorAll('.theme-select button'));

      function setTheme(theme) {
        root.setAttribute('data-theme', theme);
        localStorage.setItem(key, theme);
        buttons.forEach(btn => btn.setAttribute('aria-pressed', String(btn.dataset.theme === theme)));
      }

      // load saved
      const saved = localStorage.getItem(key) || 'system';
      setTheme(saved);

      // events
      buttons.forEach(btn => btn.addEventListener('click', () => setTheme(btn.dataset.theme)));

      // Optional: live-follow system changes when in system mode
      const media = window.matchMedia('(prefers-color-scheme: dark)');
      media.addEventListener?.('change', () => {
        if ((localStorage.getItem(key) || 'system') === 'system') {
          setTheme('system');
        }
      });

      // tiny demo interaction
      document.getElementById('notif').addEventListener('click', () => {
        alert('No new notifications right now.');
      });
    })();
  </script>
