<body>
  <main class="card" role="main" aria-labelledby="title">
    <h1 id="title">Student Registration</h1>
    <p class="sub">Please fill all required fields.</p>

    <!-- Note: On GitHub Pages, this will not actually submit anywhere (static site). -->
    <form id="registrationForm" action="" method="post" novalidate>
      <!-- Full Name: letters, spaces, apostrophes, and hyphens -->
      <label for="name">Full Name *</label>
      <input
        id="name"
        name="name"
        type="text"
        inputmode="text"
        autocomplete="name"
        placeholder="e.g., Deepak Kumar"
        pattern="^[A-Za-z][A-Za-z\s'-]{1,48}[A-Za-z]$"
        title="Use letters, spaces, apostrophes, or hyphens (2–50 chars)."
        required
      />
      <div class="hint">Only letters, spaces, ' and - (2–50 characters).</div>

      <!-- Email -->
      <label for="email">Email *</label>
      <input
        id="email"
        name="email"
        type="email"
        inputmode="email"
        autocomplete="email"
        placeholder="you@example.com"
        required
      />

      <!-- Age: 10–100 -->
      <label for="age">Age *</label>
      <input
        id="age"
        name="age"
        type="number"
        inputmode="numeric"
        placeholder="e.g., 20"
        min="10"
        max="100"
        required
      />
      <div class="hint">Enter a number between 10 and 100.</div>

      <button type="submit">Register</button>
      <p class="fine">* Required fields</p>
    </form>
  </main>

  <script>
    // Keep native HTML5 validation UI, but prevent real submission on a static site.
    const form = document.getElementById('registrationForm');
    form.addEventListener('submit', (e) => {
      if (!form.checkValidity()) {
        // Let the browser show its built-in messages
        return;
      }
      e.preventDefault();
      alert('Form validated! (On GitHub Pages this is a demo — no backend to receive data.)');
    });
  </script>
